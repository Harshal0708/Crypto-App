<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_country"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/d_txt_country_code"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/country_code_1"
        android:gravity="start"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/d_txt_country_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline78"
        app:layout_constraintTop_toTopOf="@+id/guideline79" />

    <TextView
        android:id="@+id/d_txt_country_name"
        style="@style/textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:textSize="12sp"
        android:text="@string/country_name"
        app:layout_constraintBottom_toBottomOf="@+id/d_txt_country_code"
        app:layout_constraintEnd_toStartOf="@+id/d_txt_code"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_code"
        app:layout_constraintTop_toTopOf="@+id/d_txt_country_code" />

    <TextView
        android:id="@+id/d_txt_code"
        style="@style/textStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:textSize="12sp"
        android:text="@string/code"
        app:layout_constraintBottom_toBottomOf="@+id/d_txt_country_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline80"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_name"
        app:layout_constraintTop_toTopOf="@+id/d_txt_country_name" />

    <View
        android:id="@+id/horizontal_line_1"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginEnd="24dp"
        android:background="@color/sky_light"
        app:layout_constraintEnd_toEndOf="@+id/d_txt_country_code"
        app:layout_constraintStart_toStartOf="@+id/guideline78"
        app:layout_constraintTop_toBottomOf="@+id/d_txt_country_code" />


    <View
        android:id="@+id/horizontal_line_2"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginEnd="24dp"
        android:background="@color/sky_light"
        app:layout_constraintEnd_toEndOf="@+id/d_txt_country_name"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_code"
        app:layout_constraintTop_toBottomOf="@+id/d_txt_country_name" />

    <View
        android:id="@+id/horizontal_line_3"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginEnd="24dp"
        android:background="@color/sky_light"
        app:layout_constraintEnd_toStartOf="@+id/guideline80"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_name"
        app:layout_constraintTop_toBottomOf="@+id/d_txt_code" />

    <TextView
        android:id="@+id/txt_country_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/txt_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/d_txt_country_code"
        app:layout_constraintStart_toStartOf="@+id/d_txt_country_code"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_1" />

    <TextView
        android:id="@+id/txt_country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="start"
        android:textColor="@color/txt_color"
        app:layout_constraintEnd_toEndOf="@+id/d_txt_country_name"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_code"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_2" />

    <TextView
        android:id="@+id/txt_country_prefix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="start"
        android:textColor="@color/txt_color"
        app:layout_constraintEnd_toEndOf="@+id/d_txt_code"
        app:layout_constraintStart_toEndOf="@+id/d_txt_country_name"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_3" />
</androidx.constraintlayout.widget.ConstraintLayout>
