<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/ic_login_15"
    tools:context=".modual.authenticator.GoogleAuthenticatorActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline66"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="20dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline67"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="20dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline68"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_end="20dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline69"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="20dp" />

  <!--We are using this image
      view to display our QR code-->

    <ImageView
        android:id="@+id/ima_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/guideline66"
        app:layout_constraintTop_toTopOf="@+id/guideline67"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/idTVHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/qr_code_generator"
        android:textAlignment="viewStart"
        android:textColor="@color/hello_1"
        android:textSize="24sp"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/guideline68"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline66"
        app:layout_constraintTop_toBottomOf="@+id/ima_back" />

    <TextView
        android:id="@+id/txt_email_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica"
        android:text="@string/pls_enter_the_code"
        android:textAlignment="viewStart"
        android:textColor="@color/static_txt_2"
        android:textSize="14sp"
        android:typeface="normal"
        app:layout_constraintEnd_toStartOf="@+id/guideline68"
        app:layout_constraintStart_toStartOf="@+id/guideline66"
        app:layout_constraintTop_toBottomOf="@+id/idTVHeading" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/guideline68"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline66"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


      <ImageView
          android:id="@+id/idIVQrcode"
          android:layout_width="0dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          android:layout_marginTop="16dp"
          android:contentDescription="QR Code"
          android:src="@drawable/ic_home"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/idTVKey"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:gravity="center"
          android:text="@string/can_not_scan"
          android:textAlignment="center"
          android:textColor="@color/edit_text_color"
          android:textSize="14sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="@+id/idIVQrcode"
          app:layout_constraintHorizontal_bias="0.39"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/idIVQrcode" />

      <TextView
          android:id="@+id/idTVKey1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:gravity="center"
          android:text="@string/copy_the_key"
          android:textAlignment="center"
          android:textColor="@color/sky_light"
          android:textSize="14sp"
          android:textStyle="bold"
          app:layout_constraintBottom_toBottomOf="@+id/idTVKey"
          app:layout_constraintStart_toEndOf="@+id/idTVKey"
          app:layout_constraintTop_toTopOf="@+id/idTVKey"
          app:layout_constraintVertical_bias="0.39" />


      <com.mukesh.mukeshotpview.mukeshOtpView.MukeshOtpView
          android:id="@+id/ed_totp"
          style="@style/OtpWidget.OtpView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:hint="******"
          android:inputType="number"
          android:itemBackground="@drawable/otp_edittext"
          android:textColor="@android:color/black"
          android:textSize="18sp"
          app:hideLineWhenFilled="false"
          app:itemCount="6"
          app:itemSpacing="14dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/idTVKey"
          app:lineColor="@color/black"
          app:state_filled="true"
          app:viewType="none" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/btn_progressBar"
        layout="@layout/progressbar_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline69"
        app:layout_constraintEnd_toStartOf="@+id/guideline68"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline66" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_otp_password"
        app:layout_constraintEnd_toStartOf="@+id/guideline68"
        app:layout_constraintStart_toStartOf="@+id/guideline66"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_phone" />


  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
