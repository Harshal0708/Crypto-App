<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/country_code"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_strategies_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/welcome_back"
            android:textAlignment="viewStart"
            android:textColor="@color/hello"
            android:textSize="12sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/txt_strategies_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_strategies_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/helvetica"
            android:maxLines="2"
            android:text="@string/hello_there"
            android:textAlignment="viewStart"
            android:textColor="@color/static_txt"
            android:textSize="12sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/txt_red_more"
            app:layout_constraintEnd_toStartOf="@+id/txt_red_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_red_more" />

        <TextView
            android:id="@+id/txt_red_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableEnd="@drawable/ic_side_arrow"
            android:drawablePadding="4dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/read_more"
            android:textColor="@color/read_more_green"
            android:textSize="12sp"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_strategies_name" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/lighgrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_strategies_desc" />


        <TextView
            android:id="@+id/txt_status_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Active"
            android:textColor="@color/light_green"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="Status :"
            android:textColor="@color/hello"
            android:textSize="12sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/txt_status_active"
            app:layout_constraintEnd_toStartOf="@+id/txt_status_active"
            app:layout_constraintTop_toTopOf="@+id/txt_status_active"
            app:layout_constraintVertical_bias="0.47000003" />



        <TextView
            android:id="@+id/txt_strategies_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/welcome_back"
            android:textColor="@color/static_txt"
            android:textSize="12sp"
            android:typeface="normal"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/txt_strategies_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txt_strategies_name"
            app:layout_constraintTop_toTopOf="@+id/txt_strategies_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>







