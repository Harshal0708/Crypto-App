<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".modual.dashbord.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/viewLoader"
            layout="@layout/loader_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:indeterminateTint="@color/primary_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_curve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reg_profile_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/star"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <EditText
            android:id="@+id/edFirstname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_profile_user"
            android:drawablePadding="8dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/helvetica_bold"
            android:hint="@string/password"
            android:padding="8dp"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textCursorDrawable="@color/sky_light"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/reg_profile_img" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_profile_email"
            android:drawablePadding="8dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/helvetica_bold"
            android:padding="8dp"
            android:enabled="false"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textCursorDrawable="@color/sky_light"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edLastname" />

        <EditText
            android:id="@+id/edLastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"

            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_profile_user"
            android:drawablePadding="8dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/helvetica_bold"
            android:padding="8dp"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textCursorDrawable="@color/sky_light"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edFirstname" />


        <TextView
            android:id="@+id/mn_et_country_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_profile_mobile"
            android:drawablePadding="8dp"
            android:drawableTint="@color/black"
            android:fontFamily="@font/helvetica_bold"
            android:maxLength="10"
            android:padding="8dp"
            android:text="@string/country_code"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edEmail" />

        <EditText
            android:id="@+id/edPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/helvetica_bold"
            android:hint="@string/phone_number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="8dp"
            android:enabled="false"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textCursorDrawable="@color/sky_light"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/mn_et_country_code"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toEndOf="@+id/mn_et_country_code"
            app:layout_constraintTop_toTopOf="@+id/mn_et_country_code" />

        <include
            android:id="@+id/btn_progressBar"
            layout="@layout/progressbar_yellow_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/edPhone" />


        <RadioButton
            android:id="@+id/radioGoogle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/edit_text_color"
            android:checked="false"
            android:text="Google Authentication"
            android:textColor="@color/edit_text_color"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/btn_progressBar" />

        <RadioButton
            android:id="@+id/radioFinger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/edit_text_color"
            android:checked="false"
            android:text="Finger Authentication"
            android:textColor="@color/edit_text_color"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/radioGoogle" />


        <RadioButton
            android:id="@+id/radioOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:buttonTint="@color/edit_text_color"
            android:checked="false"
            android:text="Otp Authentication"
            android:textColor="@color/edit_text_color"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/radioFinger" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="20dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>