<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline76"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline77"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <include
        android:id="@+id/viewLoader"
        layout="@layout/loader_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:indeterminateTint="@color/primary_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/col_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/guideline76"
        app:layout_constraintStart_toStartOf="@+id/guideline74"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/d_txt_country_code"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/country_code_1"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/d_txt_country_name"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/d_txt_country_name"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/country_name"
            android:textSize="12sp"
            style="@style/textStyle"
            app:layout_constraintBottom_toBottomOf="@+id/d_txt_country_code"
            app:layout_constraintEnd_toStartOf="@+id/d_txt_code"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/d_txt_country_code"
            app:layout_constraintTop_toTopOf="@+id/d_txt_country_code" />

        <TextView
            android:id="@+id/d_txt_code"
            style="@style/textStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/code"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/d_txt_country_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/d_txt_country_name"
            app:layout_constraintTop_toTopOf="@+id/d_txt_country_name" />

        <View
            android:id="@+id/horizontal_line_1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginEnd="24dp"
            android:background="@color/sky_light"
            app:layout_constraintEnd_toEndOf="@+id/d_txt_country_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/d_txt_country_code" />


        <View
            android:id="@+id/horizontal_line_2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginEnd="24dp"
            android:background="@color/sky_light"
            app:layout_constraintEnd_toEndOf="@+id/d_txt_country_name"
            app:layout_constraintStart_toEndOf="@+id/d_txt_country_code"
            app:layout_constraintTop_toBottomOf="@+id/d_txt_country_name" />

        <View
            android:id="@+id/horizontal_line_3"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/sky_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/d_txt_country_name"
            app:layout_constraintTop_toBottomOf="@+id/d_txt_code" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_countryName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline77"
        app:layout_constraintEnd_toStartOf="@+id/guideline76"
        app:layout_constraintStart_toStartOf="@+id/guideline74"
        app:layout_constraintTop_toBottomOf="@+id/col_country" />

</androidx.constraintlayout.widget.ConstraintLayout>