<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/ic_login_15"
    tools:context=".modual.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="20dp" />


        <TextView
            android:id="@+id/txt_hello_there"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/hello_there"
            android:textAlignment="viewStart"
            android:textColor="@color/static_txt"
            android:textSize="14sp"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="@+id/txt_wcl_back"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toStartOf="@+id/txt_wcl_back"
            app:layout_constraintTop_toBottomOf="@+id/txt_wcl_back" />

        <TextView
            android:id="@+id/txt_wcl_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/welcome_back"
            android:textAlignment="viewStart"
            android:textColor="@color/hello"
            android:textSize="24sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="@+id/guideline18" />

        <ImageView
            android:id="@+id/img_ic_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_user"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/txt_hello_there" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/img_ic_user">

            <EditText
                android:id="@+id/login_emailNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_new_email"
                android:drawablePadding="8dp"
                android:drawableTint="@color/edit_text_color"
                android:fontFamily="@font/helvetica_bold"
                android:hint="@string/email_number"
                android:padding="8dp"
                android:textColor="@color/edit_text_color"
                android:textColorHint="@color/edit_text_hint_color"
                android:textCursorDrawable="@color/sky_light"
                android:textSize="16sp"
                android:typeface="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_login_country_code"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_login_country_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_new_email"
                android:drawablePadding="8dp"
                android:drawableTint="@color/edit_text_color"
                android:padding="8dp"
                android:text="@string/country_code"
                android:textColor="@color/txt_color"
                android:fontFamily="@font/helvetica_bold"
                android:textSize="16sp"
                android:typeface="normal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/pwd_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:drawableStart="@drawable/ic_show"
            android:drawableEnd="@drawable/ic_eye_off"
            android:drawablePadding="8dp"
            android:drawableTint="@color/edit_text_color"
            android:fontFamily="@font/helvetica_bold"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/edit_text_hint_color"
            android:textCursorDrawable="@color/sky_light"
            android:textSize="16sp"
            android:typeface="normal"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/login_con" />

        <include
            android:id="@+id/btn_progressBar"
            layout="@layout/progressbar_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password" />

        <TextView
            android:id="@+id/txt_sign_in_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:fontFamily="@font/helvetica_bold"
            android:gravity="center"
            android:text="@string/create_a_crypto_account"
            android:textAlignment="center"
            android:textColor="@color/txt_color"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="@+id/guideline17"/>

        <TextView
            android:id="@+id/txt_otp_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/helvetica_bold"
            android:gravity="start"
            android:text="@string/sign_up"
            android:textAlignment="textStart"
            android:textColor="@color/sky_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:layout_constraintBottom_toBottomOf="@+id/txt_sign_in_here"
            app:layout_constraintStart_toEndOf="@+id/txt_sign_in_here"
            app:layout_constraintTop_toTopOf="@+id/txt_sign_in_here"
            app:layout_constraintVertical_bias="0.61" />


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/forgot_password"
            android:fontFamily="@font/helvetica_light"
            android:textColor="@color/static_txt"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/pwd_password" />

        <CheckBox
            android:id="@+id/cb_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/sky_light"
            android:text="@string/remember_me"
            android:textColor="@color/static_txt"
            android:textSize="14sp"
            android:fontFamily="@font/helvetica_light"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/pwd_password" />

        <TextView
            android:id="@+id/txt_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="@string/privacy"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_sign_in_here"
            app:layout_constraintEnd_toEndOf="@+id/txt_otp_resend"
            app:layout_constraintStart_toStartOf="@+id/txt_sign_in_here"
            app:layout_constraintTop_toBottomOf="@+id/btn_progressBar"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
