<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CryptoApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="no_tool_bar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryDark">@color/default_color</item>
        <item name="colorAccent">@color/light_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="line">
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/txt_color</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>

    </style>


    <style name="textStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/nav_color</item>
        <item name="android:fontFamily">@font/helvetica_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mukeshOtpStyle">@style/OtpWidget.OtpView</item>
    </style>


    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>